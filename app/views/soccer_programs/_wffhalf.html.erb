<% content_for :banner_content do %>
  <div class="main-banner banner-holder inner-banner">
    <div class="fixed-banner event-banner">
      <div class="banner-text">
        <div class="container">
          <div class="content">
            <div class="inner text-center">
              <div class="main-title mb-0 ">
                <h2 class="mb-0">WFF MEMBERS REGISTRATION</h2>
              </div>
              <!--title-->
            </div>
            <!--inner-->
          </div>
        </div>
      </div>
      <!--banner text-->
    </div>
  </div>
  <!--banner ends-->
<% end %>
   

<section class="primary-padding event-listing-block">
  <div class="container">
  <div class="event-list-wrap mb-37 ">
    <div class="event-list">
      <div class="row">
        <div class="col-md-6 col-sm-6">
          <figure class="event-figure">
            <a href="03-enstruct-events-list-fullwidth.html#" class=" image-effect">
            <%= image_tag "enstruct_layout/player.png" ,alt: "Event" %>
            </a>
          </figure>
          <!--figure-->
        </div>
        <!--left-->
        <div class="col-md-6 col-sm-6">
          <div class="box">
            <div class="top mb-30">
              <div class="date">
                <span class="month bg-yellow">Soccer</span>
                <span class="day bg-blue">360</span>
              </div>
              <!--date-->
              <div class="right">
                <h3>
                  <a href="03-enstruct-events-list-fullwidth.html#">
                  WFF Member Half Day CAMP Registration
                  </a>
                </h3>
                <div class="post-info">
                  <span class="post-date">
                  <i class="fa fa-calendar-check-o"></i> 8:30 am - 12:00 pm, Recurring Event 
                  </span>
                  <!--date-->
                  <span class="post-location">
                  <i class="fa fa-map-marker"></i> 3104 S Kings Ave, Brandon, FL 33511
                  </span>
                  <!--location-->
                </div>
              </div>
            </div>
            <!--top-->
            <div class="content-wrap">
              <div class="row">
                <div class="col-sm-6 feature-left space-top-30">
                  <div class="feature block">
                    <h3>How many children do you wish to register?</h3>
                    <p>Select child amount.</p>
                    <%=form_tag current_user.present? ? wffhalf_days_path : new_user_session_path,method: :get do %>
                      <%=hidden_field_tag 'plan_name',nil,value: "wffhalf"%>
                      <div class= "weekly">
                        <%= label 'weekly', "One child", :value => "true"  %>
                        <%= radio_button_tag 'interval', 1, true, class: 'monthly_radio'%></br>
                        <%= label 'weekly', "Two Children", :value => "false" %>
                        <%= radio_button_tag 'interval', 2, false, :checked => true, class: 'weekly_radio' %></br>
                        <%= label 'weekly', "Three Children", :value => "false" %>
                        <%=radio_button_tag 'interval',3,false%>
                      </div>
                      <%= submit_tag 'Register', class: "btn btn-outline-primary" %>
                  <% end %>
                </div>
                <!-- / feature-block -->
              </div>
            </div>
            <!--content-->
          </div>
        </div>
        <!--right-->
      </div>
    </div>
    <!--signle event list-->
    <div class="map-holder mb-45">
      <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3526.1265387602084!2d-82.29623898492062!3d27.89808992369039!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x88c2cdf88c0653b9%3A0x80506a3893ba2244!2s3104+S+Kings+Ave%2C+Brandon%2C+FL+33511!5e0!3m2!1sen!2sus!4v1495170666294" width="600" height="580" frameborder="0" style="border:0" allowfullscreen></iframe>
    </div>
    <!--map- holder-->
  </div>
  <!--container-->
</section>