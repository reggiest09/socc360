 <% content_for :banner_content do %>
  <div class="main-banner banner-holder inner-banner">
    <div class="fixed-banner event-banner">
      <div class="banner-text">
        <div class="container">
          <div class="content">
            <div class="inner text-center">
              <div class="main-title mb-0 ">
                <h2 class="mb-0">Sign In</h2>
              </div>
              <!--title-->
            </div>
            <!--inner-->
          </div>
        </div>
      </div>
      <!--banner text-->
    </div>
  </div>
  <!--banner ends-->
<% end %>
<div class="space-100">&nbsp;</div>

<div class="border-form-div">

<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: {class:"form-signin"}) do |f| %>
  <%= f.error_notification %>
  <h2 class ="text-center">Sign Into Account</h2>
  <%= f.input :email, required: false, autofocus: true, label:false, placeholder: "email", input_html: {class: "form-control"} %>
  <%= f.input :password, required: false, label:false, placeholder: "password", input_html: {class: "form-control"} %>
  
  <%= f.button :submit, "Log in", class: "btn btn-primary btn-block" %>
  <% end %>

<%= render "devise/shared/links" %>
</div>


<div class="space-100">&nbsp;</div>